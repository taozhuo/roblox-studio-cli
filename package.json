{
  "name": "roblox-studio-cli",
  "version": "0.2.0",
  "description": "Bakable - CLI and daemon for AI-powered Roblox Studio development",
  "type": "module",
  "scripts": {
    "server": "node server/index.js",
    "daemon": "node daemon/index.js",
    "mcp": "node daemon/mcp-stdio.js",
    "cli": "node cli/index.js",
    "build:plugin": "rojo build plugin.project.json -o Bakable.rbxm",
    "sync:plugin": "rojo build plugin.project.json -o \"$HOME/Documents/Roblox/Plugins/Bakable.rbxm\""
  },
  "bin": {
    "studioctl": "./cli/index.js"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.76",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "commander": "^12.1.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "ws": "^8.18.0"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "js-yaml": "^4.1.1"
  }
}
